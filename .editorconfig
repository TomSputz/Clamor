# EditorConfig configuration file, see: https://editorconfig.org/

root = true

[*]
charset = utf-8
max_line_length = 100
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_size = 2
tab_width = 2

[*.rst]
indent_size = 3
tab_width = 3

[Makefile]
indent_style = tab
